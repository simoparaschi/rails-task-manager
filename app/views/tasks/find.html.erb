<h1><%= @current_task.title %></h1>
<p><%= @current_task.details %></p>
<p><%= link_to "Update task", edit_path %></p>


<div class="flex">
  <!-- Checkbox should be checked if task.completed is true -->
  <% if @current_task.completed %>
    <%= check_box_tag @current_task.title, @current_task.title, true %>
    <% else %>
    <input type="checkbox" name="<%= @current_task.title %>">
  <% end %>
  <div>This task is completed</div><br>
</div>


<p><%= link_to "Back to tasks", tasks_path %></p>
