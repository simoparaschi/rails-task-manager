<h1>My tasks</h1>


<div class="container">
  <% @tasks.each do |task| %>
   <!-- Checkbox should be checked if task.completed is true -->
    <% if task.completed %>
      <%= check_box_tag task.title, task.title, true %>
    <% else %>
    <input type="checkbox" name="<%= task.title %>">
    <% end %>
    <%= link_to task.title, task_path(task) %><br>
  <% end %>
</div>
